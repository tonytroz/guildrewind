<%= form_for @reply, url: {controller: :replies, action: "create", post_id: @post.id, poster_id: @post.user.id} do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
