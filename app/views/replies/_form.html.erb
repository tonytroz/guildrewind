<%= form_for @reply, url: {controller: :replies, action: "create", post_id: @post.id, poster_id: @post.user.id} do |f| %>
  
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Reply", class: "btn btn-large btn-custom" %>
  </div>
<% end %>
